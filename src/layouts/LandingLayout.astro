---
import { ViewTransitions } from "astro:transitions";
import { SEO } from "astro-seo";
import "@fontsource-variable/inter/index.css";
import "@fontsource-variable/bricolage-grotesque/index.css";
import "../styles/global.css";

export interface Props {
  title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/opengraph.jpg",
  Astro.site
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "Bitropy"
  : "Bitropy - Sovereign AI Infrastructure for Enterprises";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <SEO
      title={makeTitle}
      description="Bitropy is a modular sovereign AI infrastructure platform for enterprises that prioritize data privacy, security, and cost effectiveness. On-premises deployment with production-scale AI."
      canonical={canonicalURL}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `Bitropy - Sovereign AI Infrastructure for Enterprises`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Bitropy - Sovereign AI Infrastructure",
        },
      }}
    />
    <style is:global>
      img {
        content-visibility: auto;
      }
    </style>
    <ViewTransitions />
  </head>
  <body class="min-h-screen flex flex-col">
    <slot />
  </body>
</html>
